@{
    ViewBag.Title = "SQuestion";
}
<link rel="stylesheet" type="text/css" href="~/Content/QuestionListStyle.css" />
<div class="questionmaindiv">
    <h1>My QuestionList</h1>
    @if (ViewBag.Question.Count < 1) 
    {
        @ViewBag.NullQuestion;
    }
    @for (int j = 0; j < ViewBag.Question.Count; j++)
    {
        <div class="centerquestiondiv">
            <table>
                <tr>
                    <td>
                        Avatar
                    </td>
                    <td>
                        <h1>Sender:@ViewBag.User[j]</h1>
                    </td>
                    <td>
                        <div class="deletebutton has-tip" data-tooltip aria-haspopup="true" title="Delete this question">
                            <form method="post" action="/SQuestionList/Delete">
                                <input type="hidden" name="id" value="@ViewBag.Question[j].id" />
                                <input type="submit" name="" value="X">
                            </form>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        @ViewBag.Question[j].qText
                    </td>
                    <br />
                </tr>
                <tr>
                    <td>
                        <a class="show-btn" href="javascript:void(0)" onclick="document.getElementById('@ViewBag.Question[j].id').style.display='block';document.getElementById('fade').style.display='block'">Answer</a>
                    </td>
                </tr>
            </table>
            <div id='@ViewBag.Question[j].id' class="envelope">
                <a class="close-btn" href="javascript:void(0)" onclick="document.getElementById('@ViewBag.Question[j].id').style.display = 'none'; document.getElementById('fade').style.display = 'none'">Close</a>
                <h1 class="title">@ViewBag.User[j]</h1><br />
                <h1 class="questiontext">@ViewBag.Question[j].qText</h1>
                <form method="post" action="/SQuestionList/Answer">
                    <input type="hidden" name="idQuestion" value="@ViewBag.Question[j].id" />
                    <textarea class="your-message" name="aText">Enter your answer here...</textarea>
                    <input type="submit" name="send" value="Send" class="send-message">
                </form>
            </div>
            <div id="fade" class="black-overlay"></div>
            <div class="fromquestion"></div>
        </div>
     
        
    }
    
</div>